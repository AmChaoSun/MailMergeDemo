@model MailMergeDemo.Models.EmailRequest

@{
    ViewData["Title"] = "Send";
}

<h1>Send</h1>

<h3>Are you sure you want to Send this?</h3>
<div>
    <h4>EmailTemplate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Template.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Template.UploadDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template.Body)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Template.Body)
        </dd>
    </dl>

    <form enctype="multipart/form-data" asp-action="Send">
        <input type="file" asp-for="UploadFile" accept=".csv" />
        <br />
        <br />
        <input type="hidden" asp-for="Template.Id" />
        <input type="submit" value="Send" class="btn btn-success" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
